<% if @restaurant %>
  <h1>Reviews for <%= @restaurant.name %> - <%= @restaurant.type %></h1>
<% else %>
  <h1>All the Reviews </h1>
<% end %>

<ul>
<% @reviews.each do |review| %>

  <li>
    <%= @review.restaurant.name %>: <%= link_to @review.title, review_path(review)%> - <%= @review.stars%>
  </li> <br>

<% end %>
</ul>
